	  $(document).ready(function(){
	      $(".delete_btn").click(function(){
	        var seekerId = $(this).attr("sId");
	        $.ajax({
	              method: "DELETE",
	              url: "/seeker/" +seekerId,
	              success: function(msg){
	              	if(msg === "Success"){
	              		alert("deleted successfully");
	              	}
	              	else{
	              		alert("error! try again");
	              	}
	              	window.location.replace("http://localhost:1337/seeker");
	              }
	        });
	      });
      });
	//}
    
</script>